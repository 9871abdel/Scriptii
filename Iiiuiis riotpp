-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetLevelUpGUI"
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.Parent = screenGui

local levelLabel = Instance.new("TextLabel")
levelLabel.Size = UDim2.new(1, 0, 0, 50)
levelLabel.Position = UDim2.new(0, 0, 0, 25)
levelLabel.BackgroundTransparency = 1
levelLabel.Text = "Level 1"
levelLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
levelLabel.Font = Enum.Font.SourceSans
levelLabel.TextSize = 30
levelLabel.TextStrokeTransparency = 0.5
levelLabel.Parent = frame

-- Function to simulate level-up effect
local function simulateLevelUp()
    local originalText = levelLabel.Text
    levelLabel.Text = "Level 50"
    levelLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color

    -- Animate the text change
    for i = 1, 3 do
        levelLabel.TextColor3 = Color3.fromRGB(255, 0, 0) -- Red color
        wait(0.1)
        levelLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color
        wait(0.1)
    end

    -- Reset to original text
    wait(1)
    levelLabel.Text = originalText
end

-- Trigger the level-up effect
simulateLevelUp()
)
