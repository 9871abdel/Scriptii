-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetAgeGUI"
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.Parent = screenGui

local ageLabel = Instance.new("TextLabel")
ageLabel.Size = UDim2.new(1, 0, 0, 50)
ageLabel.Position = UDim2.new(0, 0, 0, 25)
ageLabel.BackgroundTransparency = 1
ageLabel.Text = "Age 1"
ageLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
ageLabel.Font = Enum.Font.SourceSans
ageLabel.TextSize = 30
ageLabel.TextStrokeTransparency = 0.5
ageLabel.Parent = frame

-- Function to simulate age-up effect
local function simulateAgeUp()
    local originalText = ageLabel.Text
    ageLabel.Text = "Age 50"
    ageLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color

    -- Animate the text change
    for i = 1, 3 do
        ageLabel.TextColor3 = Color3.fromRGB(255, 0, 0) -- Red color
        wait(0.1)
        ageLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color
        wait(0.1)
    end

    -- Reset to original text
    wait(1)
    ageLabel.Text = originalText
end

-- Trigger the age-up effect
simulateAgeUp()

